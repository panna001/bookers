<h2>User info</h2>

<%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "no-image.jpg" %>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

<%= link_to edit_user_path(user), class: "btn btn-sm btn-outline-secondary d-block" do %>
  <i class="fas fa-user-cog"></i>
<% end %>