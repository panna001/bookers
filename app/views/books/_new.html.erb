<h2>New book</h2>
<div class="form-group">
  <%= form_with model: book, local: true do |f| %>
    <div class="field">
      <%= f.label :title, "Title" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :body, "Opinion" %>
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <%= f.submit class: "btn btn btn-success" %>
  <% end %>
</div>